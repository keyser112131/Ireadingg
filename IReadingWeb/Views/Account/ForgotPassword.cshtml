@{
    Layout = "~/Views/Account/_AccountLayout.cshtml";
}
@model AccountModel
<div class="mt-5 row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="login-wrap p-0">
            <h3 class="mb-4 text-center">Quên mật khẩu?</h3>
            <form asp-action="ForgotPassword" method="post" class="signin-form">
                <div class="form-group">
                    <input asp-for="Email" autofocus type="email" class="form-control" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="form-control btn btn-primary submit px-3">Gửi thông tin</button>
                </div>
                <p class="w-100 text-center">&mdash; Bạn chưa có tài khoản? &mdash;</p>
                <div class="social d-flex text-center">
                    <a href="/Account/Register" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Đăng ký ngay</a>
                </div>
                </form>
        </div>
    </div>
</div>
