<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Thông báo</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <ul>
                        @foreach (Notification item in Model)
                        {
                            <li><a style="font-size:17px" href="/Information/NotifiDetail/@item.Id">@item.Name</a><span style="margin-left: 10px;font-size:14px">@item.ModifyDate.AddHours(7).ToString("HH:mm dd/MM/yyyy")</span></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
