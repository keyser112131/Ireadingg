@{
    Layout = "~/Views/Account/_AccountLayout.cshtml";
}
@model AccountModel
<div class="mt-5 row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="login-wrap p-0">
            <h3 class="mb-4 text-center">Đăng nhập</h3>
            <form asp-action="Login" method="post" class="signin-form">
                <div class="form-group">
                    <input asp-for="UserName" autofocus type="text" class="form-control" placeholder="Tài khoản" required>
                </div>
                <div class="form-group">
                    <input asp-for="Password" id="password-field" type="password" class="form-control" placeholder="Mật khẩu" required>
                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
                <div class="d-none form-group">
                    <input asp-for="ReturnUrl" type="text" class="form-control" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="form-control btn btn-primary submit px-3">Đăng nhập</button>
                </div>
                <div style="justify-content:end" class=" form-group d-md-flex">
                    <div class="w-100">
                        <a href="/Account/ForgotPassword" style="text-align:end" class="checkbox-wrap checkbox-primary">
                            Quên mật khẩu
                        </a>
                    </div>
                </div>
                <p class="w-100 text-center">&mdash; Bạn chưa có tài khoản? &mdash;</p>
                <div class="social d-flex text-center">
                    <a href="/Account/Register" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Đăng ký ngay</a>
                </div>
                <div class="social d-flex text-center mt-4">
                    <a href="/Account/LoginWithGoogle" class="loginGoogle px-2 py-2 ml-md-1 rounded"><img src="~/images/google.png" class="mr-2" alt="google" /><span class="ion-logo-twitter mr-2">Đăng nhặp bằng Google</span></a>
                </div>
                <div style="justify-content:center;" class=" form-group d-md-flex">
@*                     <a href="/" style="text-align:center;padding:0" class="checkbox-wrap checkbox-primary">
                        Về trang chủ
                    </a> *@
                </div>
            </form>

        </div>
    </div>
</div>
