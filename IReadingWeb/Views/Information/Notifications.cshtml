@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
@* @model Book *@
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions {
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}
<style>
    .btn1 {
        height: 30px;
        width: 30px;
        padding: 0;
        margin: 0;
    }

    .container1 {
        display: flex;
        justify-content: space-evenly;
    }

    .card1 {
        background-color: white;
        border-radius: 10px;
        box-shadow: 6px 4px 8px 4px rgb(0 0 0 / 20%);
        padding: 20px;
        width: 40%;
        margin: 1rem;
    }

        .card1 h3 {
            margin-top: 0;
            font-size: 18px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .card1 h3 img {
                width: 24px;
                height: 24px;
            }

        .card1 ul {
            list-style-type: none;
            padding: 0;
        }

            .card1 ul li {
                margin-bottom: 10px;
            }

                .card1 ul li a {
                    text-decoration: none;
                    color: #333;
                    font-size: 14px;
                }

                    .card1 ul li a:hover {
                        color: #007bff;
                    }
</style>
