@{
    Layout = "~/Views/Account/_AccountLayout.cshtml";
}
@model AccountModel
<div class="mt-5 row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="login-wrap p-0">
            <h3 class="mb-4 text-center">Thay đổi mật khẩu</h3>
            <form asp-action="ChangeAccount" method="post" class="signin-form">
                <div class="form-group">
                    <input asp-for="OldPassword" autofocus id="password-field-1" type="password" class="form-control" placeholder="Mật khẩu cũ" required>
                    <span toggle="#password-field-1" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" id="password-field-2" type="password" class="form-control" placeholder="Mật khẩu mới" required>
                    <span toggle="#password-field-2" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PasswordConfirm" id="password-field-3" type="password" class="form-control" placeholder="Nhập lại mật khẩu" required>
                    <span toggle="#password-field-3" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="form-control btn btn-primary submit px-3">Lưu thông tin</button>
                </div>
                <div class="social d-flex text-center">
                    <a href="/" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Trở về trang chủ</a>
                </div>
                </form>
        </div>
    </div>
</div>
