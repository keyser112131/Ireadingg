@{
    Layout = "~/Views/Account/_AccountLayout.cshtml";
}
@model AccountModel
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="login-wrap p-0">
            <h3 class="mb-4 text-center">Đăng kí tài khoản</h3>
            <form asp-action="Register" method="post" class="signin-form">
                <div class="form-group">
                    <input asp-for="UserName" autofocus type="text" class="form-control" placeholder="Tài khoản" required>
                </div>
                <div class="form-group">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input asp-for="FullName" type="text" class="form-control" placeholder="Họ tên" required>
                </div>
                <div class="form-group">
                    <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Số điện thoại" required>
                </div>
                <div class="form-group">
                    <input asp-for="Password" id="password-field-1" type="password" class="form-control" placeholder="Mật khẩu" required>
                    <span toggle="#password-field-1" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PasswordConfirm" id="password-field-2" type="password" class="form-control" placeholder="Nhập lại mật khẩu" required>
                    <span toggle="#password-field-2" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="form-control btn btn-primary submit px-3">Đăng kí</button>
                </div>
                <p class="w-100 text-center">&mdash; Bạn đã có tài khoản? &mdash;</p>
                <div class="social d-flex text-center">
                    <a href="/Account/Login" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Đăng nhập ngay</a>
                </div>
            </form>
        </div>
    </div>
</div>
